package com.example.demo123.SpringJPA;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.stereotype.Component;

import com.example.demo123.Course.Course;

@Component
public class CourseCommandLineRunnerJPA implements CommandLineRunner {

	@Autowired
	SpringDataJPARepository repository;

	@Override
	public void run(String... args) throws Exception {

		repository.save(new Course(1, "java", "in28minutes"));
		repository.save(new Course(2, "phython", "in28minutes"));
		repository.save(new Course(3, "javascript", "in28minutes"));
		repository.save(new Course(4, "sql", "in28minutes"));
		repository.save(new Course(5, "springBoot", "in28minutes"));

		repository.deleteById(3l);

		System.out.println(repository.findById(4l));
		System.out.println(repository.findById(5l));
		System.out.println(repository.findAll());
		

	}

}
