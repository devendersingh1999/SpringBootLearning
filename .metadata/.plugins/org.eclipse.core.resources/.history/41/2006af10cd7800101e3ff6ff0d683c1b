package com.example.demo123.JdbcRepository;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.stereotype.Repository;

import com.example.demo123.Course.Course;

@Repository
public class CourseJdbcRepository {

	@Autowired
	JdbcTemplate temp;
	
// inserting query
	String sql= "insert into course(id , name, author) values(? ,? ,?)";
	
	
	//deleting query
	
	String deleteQuery = "delete * from course where id = ?";
	
	
	
	public void insert(Course course) {
		
		temp.update(sql, course.getId(), course.getName(), course.getAuthor());
		
	}
	
	public void delete(long id) {
		
		temp.update(deleteQuery, id);
	}

	
}
